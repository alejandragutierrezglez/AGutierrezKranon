@model ML.Libro

@{
    ViewBag.Title = "GetAll";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="=col-md-12">
            <h1 style="text-align:center; color:darkblue; font-family:Elephant">BIBLIOTECA</h1>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <h5 style="color:black; font-family:'Bodoni MT'">SELECCIONE AGREGAR PARA REGISTRAR UN LIBRO O SELECCIONE BUSCAR PARA UNA BÚSQUEDA RÁPIDA </h5>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">


            @using (Html.BeginForm("GetAll", "Libro", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                <div class="row">
                    <div class="col-md-3">
                        @Html.LabelFor(model => model.Autor)
                        <div class="input-group">
                            <span class="input-group-text" id="basic-addon1"><i class="fa-solid fa-user" style="color:blue"></i></span>
                            @Html.TextBoxFor(model => model.Autor, new { @class = "form-control", @id = "txtNombre" })
                        </div>
                    </div>
                    <div class="col-md-3">
                        @Html.LabelFor(model => model.Titulo)
                        <div class="input-group">
                            <span class="input-group-text" id="basic-addon1"><i class="fa-solid fa-user" style="color:blue"></i></span>
                            @Html.TextBoxFor(model => model.Titulo, new { @class = "form-control", @id = "txtNombre" })
                        </div>
                    </div>
                    <div class="col-md-3">
                        @Html.LabelFor(model => model.AñoPublicacion)
                        <div class="input-group">
                            <span class="input-group-text" id="basic-addon1"><i class="fa-solid fa-user" style="color:blue"></i></span>
                            @Html.TextBoxFor(model => model.FechaPublicacion, new { @class = "form-control", @id = "txtNombre" })
                        </div>
                    </div>
                    <div class="col-md-3">
                        @Html.LabelFor(model => model.Editorial)
                        <div class="input-group">
                            <span class="input-group-text" id="basic-addon1"><i class="fa-solid fa-user" style="color:blue"></i></span>
                            @Html.TextBoxFor(model => model.Editorial, new { @class = "form-control", @id = "txtNombre" })
                        </div>
                    </div>
                </div>
                <br/>
                <div class="row">
                    <div class="col-md-3">
                        <div>
                            <input type="submit" value="Buscar" class="btn btn-info" />                          
                        </div>
                    </div>
                    <div class="col-md-3">                       
                        <div>
                            @Html.ActionLink("Regresar a Lista", "GetAll", "Libro", htmlAttributes: new { @class = "btn btn-outline-info" })
                        </div>
                    </div>

                </div>
            <br />

        }
        </div>
</div>






        <div class="row">
            <div class="col-md-1 ">
                @Html.ActionLink("Agregar", "Form", "Libro", htmlAttributes: new { @class = "btn btn-success" })
            </div>
            <br> <br />
        </div>
        <div class="row">
            <div class="col-lg-12">
                <table class="table table-bordered table-responsive">
                    <thead class="thead-dark">
                        <tr>
                            <td class="hidden">IdLibro</td>
                            <td>Titulo</td>
                            <td>Autor </td>
                            <td>Fecha Publicacion</td>
                            <td>Editorial</td>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (ML.Libro libro in Model.Libros)
                        {
                            <tr>
                                <td class="hidden">@libro.IdLibro</td>
                                <td>@libro.Titulo</td>
                                <td>@libro.Autor</td>
                                <td>@libro.FechaPublicacion</td>
                                <td>@libro.Editorial</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

    </div>
